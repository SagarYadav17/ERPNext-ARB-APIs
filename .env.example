# ARB API Configuration for Next.js
# Copy this file to .env.local and update with your values

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# JWT Configuration
JWT_EXPIRY_SECONDS=3600
JWT_REFRESH_EXPIRY_DAYS=7

# Optional: API Secret for server-side operations (not transmitted to client)
ARB_API_SECRET=your-secret-key

# CORS Settings (already configured in ERPNext site_config.json)
# NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
